# Database
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=scinets
POSTGRES_USER=scinets
POSTGRES_PASSWORD=scinets

# MinIO object storage
MINIO_ENDPOINT=http://minio:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_SECURE=false
MINIO_BUCKET_PAPERS=papers

# Qdrant vector database
QDRANT_URL=http://qdrant:6333
QDRANT_API_KEY=
QDRANT_COLLECTION_NAME=paper_sections
QDRANT_UPSERT_BATCH_SIZE=256

# Embeddings
EMBEDDING_MODEL_NAME=all-MiniLM-L6-v2
EMBEDDING_DIMENSION=384

# Tier-2 LLM configuration
TIER2_LLM_BASE_URL=
TIER2_LLM_COMPLETION_PATH=/v1/chat/completions
TIER2_LLM_MODEL=
TIER2_LLM_TEMPERATURE=0.1
TIER2_LLM_TOP_P=1.0
OPENAI_API_KEY=
OPENAI_ORGANIZATION=

# Tier-3 LLM configuration
TIER3_LLM_BASE_URL=
TIER3_LLM_COMPLETION_PATH=/v1/chat/completions
TIER3_LLM_MODEL=
TIER3_LLM_TEMPERATURE=0.1
TIER3_LLM_TOP_P=1.0
TIER3_LLM_MIN_RULE_HITS=1
TIER3_LLM_MAX_SENTENCES=40
TIER3_LLM_MAX_TRIPLES=20
TIER3_LLM_RETRY_ATTEMPTS=2
TIER3_LLM_TIMEOUT_SECONDS=120
